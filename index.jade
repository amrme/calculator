doctype
html( lang="en" )
    head
        title Online Calculator by Amr Sekilly for Free Code Camp - freeCodeCamp
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='Online Calculator by Amr Sekilly for Free Code Camp - freeCodeCamp, js, jquery, less, jade' )
        link(rel="shortcut icon" href="img/favicon.ico" type="image/x-icon")
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
        link(href="css/main.css", rel="stylesheet")
 
    body(style="padding-top:7%;")
        .container.background
          .row
            .col-md-4.col-sm-4.col-xs-2
            .col-md-3.col-sm-4.col-xs-8
              // put calculator here
              .row
                #display
                  h1(id="result").pull-right 0
                  
                
              .row.calculator-body
                // buttons
                .row.row-buttons.operation-row
                  // first row
                  .col-xs-3
                    // reset button
                    .button(type="button", class="btn", id="clear-btn", name="button") CLR
                  .col-xs-3
                    // devision button
                    .button(type="button", class="btn operation-btn", name="button") &radic;
                  .col-xs-3
                    // square button
                    .button(type="button", class="btn operation-btn", name="button") x
                      sup  2
                  .col-xs-3
                    // division button
                    .button(type="button", class="btn operation-btn", name="button") /             
          
                .row.row-buttons.special-row
                  // second row
                  .col-xs-3
                    .button(type="button", class="btn", name="button") 1
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 2
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 3            
                  .col-xs-3.special-effect
                    // multiplication button
                    .button(type="button", class="btn operation-btn", name="button") X
                    
                .row.row-buttons.special-row
                  // second row
                  .col-xs-3
                    .button(type="button", class="btn", name="button") 4
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 5
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 6           
                  .col-xs-3.special-effect
                    // add button
                    .button(type="button", class="btn operation-btn", name="button") +
                    
                .row.row-buttons.special-row
                  // second row
                  .col-xs-3
                    .button(type="button", class="btn", name="button") 7
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 8
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 9           
                  .col-xs-3.special-effect
                    // add button
                    .button(type="button", class="btn operation-btn", name="button") -
                    
                .row.row-buttons.special-row
                  // second row
                  .col-xs-3.img-effect
                    a(href="http://github.com/amrme/calculator") 
                      img(src="img/logo.png", class="img-responsive", alt="Fork me on GitHub", title="Fork me on Github")
                    
                    
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") 0
                  .col-xs-3                  
                    .button(type="button", class="btn ", name="button") .           
                  .col-xs-3.special-effect
                    // add button
                    .button(type="button", class="btn operation-btn special-btn", name="button") =
        
                
            .col-md-5.col-sm-4.col-xs-2
                    
          p(style="padding-top:40px") Created by 
            a(href="http://twitter.com/amrsekilly", target="_blank") Amr Sekilly 
            span as an assignment project for 
              a(href="http://freecodecamp.com/amrme", target="_blank") Free Code Camp 
              
            
          


              
              
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
